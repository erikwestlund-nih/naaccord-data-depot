# Optimized Services Container - Clean Python-only build
# Removed R/Quarto dependencies - reports no longer generated by this system

# Stage 1: Build Python dependencies
FROM python:3.12-slim AS python-builder

ARG DEBIAN_FRONTEND=noninteractive

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Build tools
    build-essential \
    gcc \
    g++ \
    # Database client
    default-libmysqlclient-dev \
    pkg-config \
    # System libraries for Python packages
    libcurl4-openssl-dev \
    libssl-dev \
    libxml2-dev \
    libffi-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy and install Python requirements
COPY requirements-base.txt requirements-services.txt /tmp/
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r /tmp/requirements-services.txt

# Stage 2: Final production image
FROM python:3.12-slim

# Install runtime dependencies only
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Database client
    default-libmysqlclient-dev \
    # File type detection
    libmagic1 \
    # System libraries
    libcurl4 \
    libxml2 \
    libffi8 \
    libgomp1 \
    # Process monitoring
    curl \
    # SAML authentication
    xmlsec1 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy Python virtual environment
COPY --from=python-builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Create non-root user
RUN useradd -m -u 1000 -s /bin/bash appuser

# Create necessary directories
RUN mkdir -p /app /app/static /app/media /app/logs \
    /app/resources/storage/uploads/audit \
    /app/resources/storage/data \
    /app/resources/storage/downloads \
    /app/resources/storage/scratch \
    /app/resources/nas \
    /app/storage/nas \
    /mnt/nas && \
    chown -R appuser:appuser /app

# Set working directory
WORKDIR /app

# Copy application code
COPY --chown=appuser:appuser . .

# Remove .env.example to prevent issues
RUN rm -f /app/.env.example

# Copy entrypoint and healthcheck scripts
COPY --chown=appuser:appuser deploy/containers/entrypoint-services.sh /entrypoint.sh
COPY --chown=appuser:appuser deploy/containers/healthcheck-services.sh /healthcheck.sh
RUN chmod +x /entrypoint.sh /healthcheck.sh

# Switch to non-root user
USER appuser

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    DJANGO_SETTINGS_MODULE=depot.settings \
    SERVER_ROLE=services \
    PATH="/opt/venv/bin:$PATH"

# Expose port
EXPOSE 8001

# Smart health check - adapts based on SERVICE_TYPE
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD /healthcheck.sh

# Use flexible entrypoint
ENTRYPOINT ["/entrypoint.sh"]
