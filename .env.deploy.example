# NA-ACCORD Deployment Environment Variables
# Copy to .env.deploy and update with secure values

# Django Configuration
SECRET_KEY=your-very-secure-secret-key-here
DEBUG=False
ALLOWED_HOSTS=192.168.50.10,192.168.50.11,localhost,127.0.0.1,naaccord.pequod.sh
CSRF_TRUSTED_ORIGINS=https://naaccord.pequod.sh

# Database Configuration (Host-installed MariaDB)
DB_ROOT_PASSWORD=secure_root_password_here
DB_APP_PASSWORD=secure_app_password_here
DB_REPORT_PASSWORD=secure_report_password_here
DB_BACKUP_PASSWORD=secure_backup_password_here

# MariaDB Encryption (generated by install script)
ENCRYPTION_KEY=will_be_generated_by_install_mariadb_script

# Server Role (set on each server: web or services)
SERVER_ROLE=services

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_here

# Internal API Configuration
INTERNAL_API_KEY=secure_api_key_64_chars_here

# Celery Flower Monitoring
FLOWER_USER=admin
FLOWER_PASSWORD=secure_flower_password_here

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# S3/MinIO Configuration (optional)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_STORAGE_BUCKET_NAME=naaccord-storage
AWS_S3_ENDPOINT_URL=http://minio:9000

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Container Registry (for production)
REGISTRY_URL=registry.example.com
REGISTRY_USER=deploy
REGISTRY_TOKEN=registry_token_here